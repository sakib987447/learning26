    <script>
         function get_validate()
        { 
            var comment_value = document.getElementById("comment").value;
            var author_value = document.getElementById("author").value;
            var email_value = document.getElementById("email").value;
            comment_value = comment_value.trim();
            author_value = author_value.trim();
            email_value = email_value.trim();

            var regex = /^[A-Za-z\s]{1,}[\.]{0,1}[A-Za-z\s]{0,}$/; 
            var regexSrciptTag = '<[^>]*script/g';
            var regexStyleTag  = '<[^>]*style';
            var regexEmail     = '^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$';

            if (comment_value == "")
            {
                alert("Please fill the comment!");
                document.getElementById("comment").focus();
                return false;
            }

            if(comment_value.match(regexSrciptTag) == "<script" || comment_value.match(regexStyleTag) == "<style" ){
                alert("No special characters allowed!");
                document.getElementById("comment").focus();
                return false;
            }

            if(regex.test(comment_value) == false){
                alert("No special characters allowed!");
                document.getElementById("comment").focus();
                return false;
            }

            /**
            * Edited By: Savita
            * Date : 25-01-2017
            */

            if (author_value == "")
            {
                alert("Please fill the name!");
                document.getElementById("author").focus();
                return false;
            }
            if(author_value.match(regexSrciptTag) == "<script" || author_value.match(regexStyleTag) == "<style" ){
                alert("No special characters allowed!");
                document.getElementById("author").focus();
                return false;
            }
            if(regex.test(author_value) == false){
                alert("Name must be string!");
                document.getElementById("author").focus();
                return false;
            }

            if (email_value == "")
            {
                alert("Please fill the email!");
                document.getElementById("email").focus();
                return false;
            }

            if(email_value.match(regexSrciptTag) == "<script" || email_value.match(regexStyleTag) == "<style" ){
                alert("No special characters allowed!");
                document.getElementById("email").focus();
                return false;
            }

            if(regexEmail.test(email_value) == false){
                alert("Please enter a valid email address.!");
                document.getElementById("email").focus();
                return false;
            }


        }
